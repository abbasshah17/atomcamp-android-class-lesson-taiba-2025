<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/view1"
        android:layout_width="@dimen/text_width"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"

        android:text="My name is Abbas Anwer Ali. I am an Android Developer"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view2"

        app:layout_constraintVertical_bias="0"
        />

    <TextView
        android:id="@+id/view2"
        style="@style/FirstApplicationTextStyleNormal"
        android:layout_width="@dimen/text_width"
        android:layout_height="wrap_content"
        android:background="@color/black"

        android:text="My name is Muhammad Rehan. I am a flutter developer and Android native developer and trainer at atomcamp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/barrier"
        app:layout_constraintStart_toEndOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintVertical_bias="0"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:constraint_referenced_ids="view1,view2"
        app:barrierDirection="bottom"
        />


    <View
        android:id="@+id/view3"
        style="@style/FirstApplicationTextStyleNormal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/teal_200"

        app:layout_constraintTop_toBottomOf="@id/barrier"
        />
</androidx.constraintlayout.widget.ConstraintLayout>